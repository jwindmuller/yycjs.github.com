<div class="meetup">
  <div class="row-fluid">
    <div class="span12">
      <h2>{{name}}</h2>
      <h3>{{prettyDate time}} <a href="{{event_url}}"><i class="icon-meetup"></i></a></h3>
    </div>
  </div>

  <div class="row-fluid">
    <div class="event-location span4">
      <div class="row-fluid">
        <div class="span6">
          <dl class="dl-horizontal">
            <dt>Starts:</dt>
            <dd>{{prettyTime time}}</dd>
            <dt>Ends:</dt>
            <dd>{{prettyTime time duration}}</dd>
          </dl>
        </div>
        <div class="span6">
          <address>
            <strong>{{venue.name}}</strong><br>
            {{venue.address_1}}<br>
            {{venue.city}}, {{venue.state}}<br>
          </address>
        </div>
      </div>

      <div class="row-fluid">
        <div id="map">
          <img class="img-rounded" src="http://maps.google.com/maps/api/staticmap?center={{venue.lat}},{{venue.lon}}&amp;zoom=14&amp;format=png&amp;maptype=roadmap&amp;mobile=true&amp;markers=color:Yellow|{{venue.lat}},{{venue.lon}}&amp;size=480x320&amp;key=ABQIAAAAQ127-gVdIM3nq38RBYCN-RRrZQw2CF6YFdWEO75V5821rhw7fBTGniMwnKw_COoRSFJ3rNONzbqycw&amp;sensor=false">
        </div>
      </div>

      <div class="row-fluid">
        <h3>Presenters</h3>

        {{#hosts}}
        <div class="media">
          <a class="pull-left" href="{{link}}" target="_blank">
            <img class="img-circle member-photo" {{#photo.thumb_link}}src="{{.}}"{{/photo.thumb_link}}>
          </a>
          <div class="media-body">
            <h4 class="media-heading">{{name}}</h4>
            {{#other_services}}
            {{#twitter}}
            <a href="http://twitter.com/{{identifier}}" target="_blank"><i class="icon-twitter"></i></a>
            {{/twitter}}
            {{#linkedin}}
            <a href="{{identifier}}" target="_blank"><i class="icon-linkedin"></i></a>
            {{/linkedin}}
            {{#facebook}}
            <a href="{{identifier}}" target="_blank"><i class="icon-facebook"></i></a>
            {{/facebook}}
            {{/other_services}}
          </div>
        </div>
        {{/hosts}}

      </div>
    </div>
    <div class="description span8">
      <h3>Itinerary</h3>
      {{{description}}}
    </div>
  </div>
</div> <!-- ./meetup -->