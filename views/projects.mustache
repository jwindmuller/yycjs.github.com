<div class="container-fluid">
	<div class="row-fluid">
	  <div class="span12">
	    <h1>Our Projects</h1>
	    <hr>
	  </div>
	</div>

	{{#projects}}
	<div class="project">
	  <div class="row-fluid">
	    <div class="span12">
	      <h2>
	      	{{name}}
	      	<a href="{{html_url}}" target="_blank"><i class="icon-github"></i></a>
	        {{#if homepage}}
	        <a href="{{homepage}}" target="_blank"><i class="icon-home-1"></i></a>
	        {{/if}}
      	</h2>
	      <h3>{{description}}</h3>
	    </div>
	  </div>

	  <div class="row-fluid">
	    <div class="project-description span8">
        {{#if readme}}{{{markdown readme}}}{{/if}}
	    </div>
	    <div class="span4">
	      <img class="media-object" src="http://placehold.it/200x200">
	    </div>
	  </div>
	</div>
	{{/projects}}
</div>