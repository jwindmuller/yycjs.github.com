<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <h1>Upcoming Events</h1>
      <hr>
    </div>
  </div>

  {{#upcoming}}
  <div class="meetup">
    <div class="row-fluid">
      <div class="span12">
        <h2>{{name}}</h2>
        <h3>{{date}} <a href="{{event_url}}"><i class="icon-meetup"></i></a></h3>
      </div>
    </div>

    <div class="row-fluid">
      <div class="description span6">
        <dl class="dl-horizontal">
          <dt>Starts:</dt>
          <dd>{{start.toLocaleTimeString()}}</dd>
          <dt>Ends:</dt>
          <dd>{{end.toLocaleTimeString()}}</dd>
        </dl>

        <h3>Itinerary</h3>
        {{{description}}}

        <h3>Presenters</h3>
        <ul class="media-list">
          <li class="media">
            <a class="pull-left" href="#">
              <img class="media-object" data-src="holder.js/64x64">
            </a>
            Eric Kryski
            <a href="http://twitter.com/ekryski" target="_blank"><i class="icon-twitter"></i>@ekryski</a>
            <a href="http://github.com/ekryski" target="_blank"><i class="icon-github"></i>ekryski</a>
          </li>
        </ul>
      </div>
      <div class="event-location span6">
        <address>
          <strong>{{venue.name}}</strong><br>
          {{venue.address_1}}<br>
          {{venue.city}}, {{venue.state}}<br>
        </address>
        <div id="map">
          <img class="thumbnail" src="http://maps.google.com/maps/api/staticmap?{{venue.lat}},{{venue.lon}}&amp;zoom=14&amp;format=png&amp;maptype=roadmap&amp;mobile=false&amp;markers=size:mid|color:Yellow|Center&amp;size=480x320&amp;key=ABQIAAAAQ127-gVdIM3nq38RBYCN-RRrZQw2CF6YFdWEO75V5821rhw7fBTGniMwnKw_COoRSFJ3rNONzbqycw&amp;sensor=false">
        </div>
      </div>
    </div>
  </div> <!-- ./meetup -->
  {{/upcoming}}

  <div class="row-fluid">
    <div class="span12">
      <h1>Past Events</h1>
      <hr>
      {{#past}}
      <div class="meetup">
        <div class="row-fluid">
          <div class="span12">
            <h2>{{name}}</h2>
            <h3>{{date}} <a href="{{event_url}}"><i class="icon-meetup"></i></a></h3>
          </div>
        </div>

        <div class="row-fluid">
          <div class="description span6">
            <dl class="dl-horizontal">
              <dt>Starts:</dt>
              <dd>{{start.toLocaleTimeString()}}</dd>
              <dt>Ends:</dt>
              <dd>{{end.toLocaleTimeString()}}</dd>
            </dl>

            <h3>Itinerary</h3>
            {{{description}}}
          </div>
          <div class="event-location span6">
            <address>
              <strong>{{venue.name}}</strong><br>
              {{venue.address_1}}<br>
              {{venue.city}}, {{venue.state}}<br>
            </address>
          </div>
        </div>
      </div> <!-- ./meetup -->
      {{/past}}
    </div>
  </div>

</div>